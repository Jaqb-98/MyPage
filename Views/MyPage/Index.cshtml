@model PageModel

@{
    int photoCount = 0;
}

<link href="assets/css/style.css" rel="stylesheet">


<!-- ======= Slider Section ======= -->
<section id="slider" class="slider">
    <div class="section-title">
        <h2>Slider</h2>
    </div>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var photo in Model.PhotoData)
            {
                @if (photoCount == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@photoCount" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@photoCount"></li>
                }
                photoCount++;
            }
        </ol>
        <div class="carousel-inner">
            @{
                photoCount = 0;
            }

            @foreach (var photo in Model.PhotoData)
            {


                @if (photoCount == 0)
                {

                    <div class="carousel-item active">
                        <img src="@photo.Urls.regular" class="d-block" alt="Slide">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@photo.Urls.regular" class="d-block" alt="Slide">
                    </div>
                }
                photoCount++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section><!-- End Slider Section -->
<!-- ======= hobbies Section ======= -->
